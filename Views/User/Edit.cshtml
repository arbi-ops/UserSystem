@model UserSystem.Models.ApplicationUser

@{
    ViewBag.Title = "Edit User";
}

<h2 class="mb-4">Edit User</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="mb-3">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.GroupId, "Group", htmlAttributes: new { @class = "form-label" })
                @Html.DropDownListFor(model => model.GroupId, new SelectList(ViewBag.Groups, "Id", "Name", Model.GroupId), "Select Group", new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.GroupId, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-success">
                <i class="bi bi-save me-1"></i> Save
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </div>
}
