@model UserSystem.Models.ApplicationUser

@{
    ViewBag.Title = "Create User";
}

<h2 class="mb-4">Create User</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="mb-3">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Enter email" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.GroupId, "Group", htmlAttributes: new { @class = "form-label" })
                @Html.DropDownListFor(model => model.GroupId, new SelectList(ViewBag.Groups, "Id", "Name"), "Select Group", new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.GroupId, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Create
            </button>
        </div>
    </div>
}

<hr />
<a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Back to List</a>