@model UserSystem.Models.Privilege

@{
    ViewBag.Title = "Edit Privilege";
}

<h2 class="mb-4">Edit Privilege</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="mb-3">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.GroupId, "Group", htmlAttributes: new { @class = "form-label" })
                @Html.DropDownList("GroupId", null, "Select Group", new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.GroupId, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-success">
                <i class="bi bi-save me-1"></i> Save
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </div>
}
