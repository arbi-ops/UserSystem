<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - UserSystem</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
            min-height: 100vh;
        }

        .sidebar {
            height: 100vh;
            width: 220px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #212529;
            color: white;
            padding-top: 60px;
        }

            .sidebar a {
                color: #ccc;
                text-decoration: none;
                padding: 10px 20px;
                display: block;
                transition: background 0.2s;
            }

                .sidebar a:hover {
                    background-color: #343a40;
                    color: #fff;
                }

            .sidebar .nav-icon {
                margin-right: 10px;
            }

        .main {
            margin-left: 220px;
            padding: 70px 20px 60px 20px;
        }

        .navbar {
            position: fixed;
            top: 0;
            left: 220px;
            right: 0;
            z-index: 1030;
        }

        footer {
            background-color: #343a40;
            color: #ccc;
            padding: 20px 0;
            position: fixed;
            bottom: 0;
            left: 220px;
            right: 0;
        }

            footer a {
                color: #66afe9;
                text-decoration: none;
            }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column position-fixed">
        <h4 class="text-center">UserSystem</h4>
        <a href="@Url.Action("Index", "Home")"><i class="bi bi-house-door nav-icon"></i> Dashboard</a>
        <a href="@Url.Action("Index", "Users")"><i class="bi bi-people nav-icon"></i> Users</a>
        <a href="@Url.Action("Index", "Groups")"><i class="bi bi-diagram-3 nav-icon"></i> Groups</a>
        <a href="@Url.Action("Index", "Privileges")"><i class="bi bi-shield-lock nav-icon"></i> Privileges</a>
        <a href="@Url.Action("About", "Home")"><i class="bi bi-info-circle nav-icon"></i> About</a>
        <a href="@Url.Action("Contact", "Home")"><i class="bi bi-envelope nav-icon"></i> Contact</a>
    </div>

    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark shadow-sm">
        <div class="container-fluid">
            <span class="navbar-brand">Welcome</span>
            <div class="collapse navbar-collapse justify-content-end">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - UserSystem</p>
        </footer>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
