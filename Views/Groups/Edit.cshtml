@model UserSystem.Models.Group

@{
    ViewBag.Title = "Edit Group";
}

<h2 class="mb-4">Edit Group</h2>

<div class="card shadow-sm p-4 mb-5 bg-white rounded">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <div class="row mb-3">
            <div class="col-md-6">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter group name" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <button type="submit" class="btn btn-success">
            <i class="bi bi-save me-1"></i> Save Changes
        </button>
        <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">Cancel</a>
    }
</div>
