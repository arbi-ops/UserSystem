@model IEnumerable<UserSystem.Models.Group>

@{
    ViewBag.Title = "Groups";
}

<h2 class="mb-4">Groups</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Create New Group
    </a>
</p>

<table class="table table-striped table-bordered table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Users Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        {
            <tr>
                <td>@group.Id</td>
                <td>@group.Name</td>
                <td>@(group.Users?.Count() ?? 0)</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = group.Id })" class="btn btn-sm btn-warning me-1">Edit</a>
                    <a href="@Url.Action("Details", new { id = group.Id })" class="btn btn-sm btn-info me-1">Details</a>
                    <a href="@Url.Action("Delete", new { id = group.Id })" class="btn btn-sm btn-danger me-1">Delete</a>
                    <a href="@Url.Action("EditPrivileges", new { id = group.Id })" class="btn btn-sm btn-outline-primary">Edit Privileges</a>
                </td>
            </tr>
        }
    </tbody>
</table>
